resource "aws_security_group" "allow_SSH_ubuntu" {
  name        = "allow_SSH_ubuntu"
  description = "Allow SSH inbound traffic"


  ingress {
    from_port        = 0
    to_port          = 0
    protocol         = "-1"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }

  egress {
    from_port        = 0
    to_port          = 0
    protocol         = "-1"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }
}

resource "aws_key_pair" "deployer" {
  key_name   = "deployer-key"
  public_key = "ssh-rsa  varunmanikoutlo@ip-172-31-17-206"
}

####### Ubuntu VM #####


resource "aws_instance" "ubuntu" {
  ami                    = "ami-007855ac798b5175e"
  instance_type          = "t3.micro"
  key_name               = aws_key_pair.deployer.key_name
  count                  = 1
  vpc_security_group_ids = ["${aws_security_group.allow_SSH_ubuntu.id}"]
  tags = {
    "Name" = "UBUNTU-${count.index}"
    "ENV"  = "Dev"
  }


  depends_on = [aws_key_pair.deployer]

}

output "ubuntu" {
  value       = aws_instance.ubuntu.*.public_ip
  description = "Ubuntu vm public IP"
}
